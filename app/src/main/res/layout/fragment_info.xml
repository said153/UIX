<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ℹ️ Elementos de Información"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="8dp" />

        <!-- Descripción -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Los elementos informativos muestran datos al usuario. TextView para texto, ImageView para imágenes y ProgressBar para indicar progreso de operaciones."
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_marginBottom="24dp"
            android:textColor="@color/textSecondary" />

        <!-- TextView Dinámico -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView - Texto Dinámico"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tv_dynamic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Texto que cambia dinámicamente"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimary"
                    android:background="@color/backgroundLight"
                    android:padding="12dp"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🔗 Texto compartido desde otros fragments:"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tv_shared_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contenido compartido"
                    android:textColor="@color/colorAccent"
                    android:textStyle="italic"
                    android:background="@color/backgroundLight"
                    android:padding="8dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ImageView Interactivo -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ImageView - Imagen Interactiva"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginBottom="16dp" />

                <ImageView
                    android:id="@+id/iv_clickable"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_star_outline"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="8dp"
                    android:layout_marginBottom="12dp"
                    android:contentDescription="Estrella interactiva" />

                <TextView
                    android:id="@+id/tv_image_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="☆ Estrella vacía - Toca para llenar"
                    android:textColor="@color/textSecondary"
                    android:textAlignment="center"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btn_reset_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🔄 Reset Imagen"
                    android:backgroundTint="@color/textSecondary"
                    android:textColor="@color/white" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ProgressBar Circular -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ProgressBar - Indicador Circular"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginBottom="16dp" />

                <ProgressBar
                    android:id="@+id/progress_circular"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tv_circular_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Procesando datos..."
                    android:textColor="@color/colorPrimary"
                    android:textStyle="italic" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ProgressBar Horizontal -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ProgressBar - Barra Horizontal"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginBottom="16dp" />

                <ProgressBar
                    android:id="@+id/progress_horizontal"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="0"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tv_progress_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Progreso: 0%"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btn_start_progress"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="▶️ Iniciar"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/btn_reset_progress"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="🔄 Reset"
                        android:backgroundTint="@color/textSecondary"
                        android:textColor="@color/white"
                        android:layout_marginStart="8dp" />

                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Estado Global y Controles -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/colorAccent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🔗 Estado Global de la App"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tv_global_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Estado de función especial"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tv_update_counter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Actualizaciones: 0"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/btn_update_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🔄 Actualizar Información"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/colorAccent" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Información adicional -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="💡 Esta pantalla muestra información en tiempo real y se conecta con el estado global de la aplicación"
            android:textSize="14sp"
            android:textColor="@color/textSecondary"
            android:textAlignment="center"
            android:textStyle="italic"
            android:background="@color/backgroundLight"
            android:padding="12dp" />

    </LinearLayout>
</ScrollView>