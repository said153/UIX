<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- TÃ­tulo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="âœ… Elementos de SelecciÃ³n"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="8dp" />

        <!-- DescripciÃ³n -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Los elementos de selecciÃ³n permiten al usuario elegir entre opciones. CheckBox para mÃºltiples selecciones, RadioButton para una sola opciÃ³n y Switch para activar/desactivar funciones."
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_marginBottom="24dp"
            android:textColor="@color/textSecondary" />

        <!-- CheckBoxes -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CheckBox - SelecciÃ³n MÃºltiple"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginBottom="12dp" />

                <CheckBox
                    android:id="@+id/cb_option1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OpciÃ³n 1: Recibir emails"
                    android:layout_marginBottom="8dp" />

                <CheckBox
                    android:id="@+id/cb_option2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OpciÃ³n 2: Mostrar publicidad"
                    android:layout_marginBottom="8dp" />

                <CheckBox
                    android:id="@+id/cb_option3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OpciÃ³n 3: Compartir datos"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tv_checkbox_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ninguna opciÃ³n seleccionada"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="italic"
                    android:background="@color/backgroundLight"
                    android:padding="8dp"
                    android:textAlignment="center" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- RadioButtons -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RadioButton - SelecciÃ³n Ãšnica"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginBottom="12dp" />

                <RadioGroup
                    android:id="@+id/rg_colors"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp">

                    <RadioButton
                        android:id="@+id/rb_red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ”´ Rojo"
                        android:layout_marginBottom="4dp" />

                    <RadioButton
                        android:id="@+id/rb_green"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŸ¢ Verde"
                        android:layout_marginBottom="4dp" />

                    <RadioButton
                        android:id="@+id/rb_blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ”µ Azul" />

                </RadioGroup>

                <TextView
                    android:id="@+id/tv_selected_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NingÃºn color seleccionado"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:background="@color/backgroundLight"
                    android:padding="8dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Switches -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Switch - Activar/Desactivar"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginBottom="16dp" />

                <!-- Switch Notificaciones -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Notificaciones Push"
                        android:textSize="16sp" />

                    <Switch
                        android:id="@+id/switch_notifications"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_notification_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Notificaciones: DESACTIVADAS"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- Switch Modo Oscuro con Card que cambia color -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_dark_mode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="8dp"
                    android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ðŸŒ™ Modo Oscuro"
                            android:textSize="16sp" />

                        <Switch
                            android:id="@+id/switch_dark_mode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/tv_dark_mode_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Modo oscuro: DESACTIVADO"
                    android:textAlignment="center"
                    android:textStyle="bold" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Funcionalidad Conectada -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/colorAccent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”— Control Global de Funciones"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="FunciÃ³n especial de la app"
                        android:textSize="16sp"
                        android:textColor="@color/white" />

                    <Switch
                        android:id="@+id/switch_feature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_feature_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Estado global: FunciÃ³n DESACTIVADA"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/white" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Reset Button -->
        <Button
