<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Tema base de la aplicación -->
    <style name="Theme.UIX" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Colores principales -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorSecondary">@color/teal_200</item>

        <!-- Personalización de la barra de acción -->
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="android:statusBarColor">@color/purple_700</item>
        <item name="android:navigationBarColor">@color/purple_500</item>

        <!-- Tipografía y estilo general -->
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/gray</item>

        <!-- Botones y componentes -->
        <item name="materialButtonStyle">@style/Widget.MaterialComponents.Button</item>
        <item name="floatingActionButtonStyle">@style/Widget.MaterialComponents.FloatingActionButton</item>
    </style>

</resources>
